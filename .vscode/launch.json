{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run REST Server (Prod)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/rest/main.go",
            "cwd": "${workspaceFolder}",
            "env": {
                "DEPLOY_TYPE": "prod",
                "ENV_PREFIX": "MYAPP",
                "OTEL_EXPORTER": "otlp",
                // "MYAPP_DATASOURCES_RABBITMQ_CONNECTIONS_DEFAULT_PASSWORD": "CHANGED-BY-ENV",
            },
            "buildFlags": [
                "-race"
            ]
        },
        {
            "name": "Run GRPC Server (Prod)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/grpc/main.go",
            "cwd": "${workspaceFolder}",
            "env": {
                "DEPLOY_TYPE": "prod",
                "ENV_PREFIX": "MYAPP",
                "OTEL_EXPORTER": "otlp",
                // "MYAPP_DATASOURCES_RABBITMQ_CONNECTIONS_DEFAULT_PASSWORD": "CHANGED-BY-ENV",
            },
            "buildFlags": [
                "-race"
            ]
        }
    ]
}