                "url"
            ],
            "properties": {
                "code": {
                    "type": "string",
                    "maxLength": 15,
                    "minLength": 2,
                    "example": "ZSDASZX"
                },
                "expires_at": {
                    "type": "string",
                    "example": "2006-01-02 15:04:05"
                },
                "url": {
                    "type": "string",
                    "example": "https://example.com"
                }
            }
        },
        "response.Response": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "string",
                    "example": "ZSDASZX"
                },
                "created_at": {
                    "type": "string",
                    "example": "2021-10-27T14:13:39.306Z"
                },
                "expires_at": {
                    "type": "string",
                    "example": "2021-10-27T14:13:39Z"
                },
                "id": {
                    "type": "string"
                },
                "updated_at": {
                    "type": "string",
                    "example": "2021-10-27T14:13:39.306Z"
                },
                "url": {
                    "type": "string",
                    "example": "https://example.com"
                }
            }
        },
        "router.ApiResponse": {
            "type": "object",
            "properties": {
                "data": {},
                "error": {
                    "type": "string"
                },
                "status": {
                    "type": "integer"
                }
            }
        },
        "router.PagedResponse": {
            "type": "object",
            "properties": {
                "current_page": {
                    "type": "integer"
                },
                "items": {},
                "next_page": {
                    "type": "integer"
                },
                "num_of_pages": {
                    "type": "integer"
                },
                "page_size": {
                    "type": "integer"
                },
                "prev_page": {
                    "type": "integer"
                },
                "total_items": {
                    "type": "integer"
                }
            }
        },
        "update.Request": {
            "type": "object",
            "required": [
                "url"
            ],
            "properties": {
                "code": {
                    "type": "string",
                    "example": "ZSDASZX"
                },
                "expires_at": {
                    "type": "string",
                    "example": "2006-01-02 15:04:05"
                },
                "url": {
                    "type": "string",
                    "example": "https://example.com"
                }
            }
