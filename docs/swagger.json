{
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "swagger": "2.0",
    "info": {
        "description": "This is a simple URL shortener API",
        "title": "URL Shortener API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {},
        "version": "1.0"
    },
    "basePath": "/url-shortener/api",
    "paths": {
        "/mappings": {
            "get": {
                "description": "Get all URL mappings",
                "tags": [
                    "mappings"
                ],
                "summary": "Get URL Mappings",
                "parameters": [
                    {
                        "minimum": 1,
                        "type": "integer",
                        "default": 1,
                        "description": "Page Number",
                        "name": "page",
                        "in": "query"
                    },
                    {
                        "maximum": 64,
                        "minimum": 1,
                        "type": "integer",
                        "default": 16,
                        "description": "Page Size",
                        "name": "pageSize",
                        "in": "query"
                    },
                    {
                        "enum": [
                            "asc",
                            "desc"
                        ],
                        "type": "string",
                        "default": "desc",
                        "description": "Sort Order",
                        "name": "sortOrder",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Sort Field",
                        "name": "sortBy",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Search By Code",
                        "name": "codeQuery",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Search By URL",
                        "name": "urlQuery",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "desc",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/router.ApiResponse"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "allOf": [
                                                {
                                                    "$ref": "#/definitions/router.PagedResponse"
                                                },
                                                {
                                                    "type": "object",
                                                    "properties": {
                                                        "items": {
                                                            "type": "array",
                                                            "items": {
                                                                "$ref": "#/definitions/response.Response"
                                                            }
                                                        }
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            },
            "post": {
                "description": "If 'code' parameter is not supplied, one will be generated",
                "tags": [
                    "mappings"
                ],
                "summary": "Create or Generate URL Mapping",
                "parameters": [
                    {
                        "description": "Mapping Request",
                        "name": "mapping",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/create.Request"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "desc",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/router.ApiResponse"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/response.Response"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        },
        "/mappings/{code}": {
            "get": {
                "description": "Get a single URL mapping",
                "tags": [
                    "mappings"
                ],
                "summary": "Get URL Mapping",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Short Code",
                        "name": "code",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "desc",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/router.ApiResponse"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/response.Response"
                                        }
                                    }
                                }
                            ]
                        }
                    },
                    "404": {
                        "description": "desc",
                        "schema": {
                            "$ref": "#/definitions/router.ApiResponse"
                        }
                    }
                }
            },
            "delete": {
                "description": "Deletes an existing mapping",
                "tags": [
                    "mappings"
                ],
                "summary": "Deletes an existing mapping",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Short Code",
                        "name": "code",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "\t\tdesc",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "patch": {
                "description": "Update existing URL Mapping",
                "tags": [
                    "mappings"
                ],
                "summary": "Update existing URL Mapping",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Short Code",
                        "name": "code",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Update Request",
                        "name": "mapping",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/update.Request"
                        }
                    }
                ],
                "responses": {
                    "202": {
                        "description": "desc",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/router.ApiResponse"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/response.Response"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        }
    },
